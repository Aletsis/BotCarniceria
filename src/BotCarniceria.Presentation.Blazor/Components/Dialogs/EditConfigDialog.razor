@using BotCarniceria.Core.Application.DTOs
@using BotCarniceria.Core.Application.CQRS.Commands
@using MediatR
@using MudBlazor
@inject IMediator Mediator
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudTextField Label="Clave" Value="@Config.Clave" ReadOnly="true" />
        <MudTextField Label="Descripción" Value="@Config.Descripcion" ReadOnly="true" Lines="2" />
        
        
        @if (IsTimeZoneConfig())
        {
            <MudAutocomplete T="string" 
                             Label="Zona Horaria" 
                             @bind-Value="newValue" 
                             SearchFunc="@SearchTimeZones"
                             ToStringFunc="@(tz => GetTimeZoneDisplayName(tz))"
                             HelperText="Selecciona la zona horaria del negocio"
                             Clearable="true">
                <ItemTemplate Context="item">
                    <MudText Typo="Typo.body2">@GetTimeZoneDisplayName(item)</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">@item</MudText>
                </ItemTemplate>
            </MudAutocomplete>
        }
        else if (IsTimeConfig())
        {
            <MudTimePicker Label="Valor (Hora)" @bind-Time="timeValue" AmPm="false" Editable="true" 
                           HelperText="Formato 24 horas (HH:mm)" />
        }
        else
        {
            <MudTextField @bind-Value="newValue" Label="Valor" Lines="3" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Guardar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [Parameter] public ConfiguracionDto Config { get; set; }

    private string newValue;
    private TimeSpan? timeValue;

    protected override void OnInitialized()
    {
        newValue = Config.Valor;
        
        // If this is a time configuration, parse the value to TimeSpan
        if (IsTimeConfig() && !string.IsNullOrEmpty(Config.Valor))
        {
            if (TimeSpan.TryParse(Config.Valor, out var parsedTime))
            {
                timeValue = parsedTime;
            }
        }
    }

    private bool IsTimeConfig()
    {
        return Config.Clave == BotCarniceria.Core.Domain.Constants.ConfigurationKeys.Orders.LateOrderWarningStartHour;
    }
    
    private bool IsTimeZoneConfig()
    {
        return Config.Clave == BotCarniceria.Core.Domain.Constants.ConfigurationKeys.System.TimeZoneId;
    }
    
    private Task<IEnumerable<string>> SearchTimeZones(string value, CancellationToken token)
    {
        var allTimeZones = TimeZoneInfo.GetSystemTimeZones()
            .Select(tz => tz.Id)
            .ToList();
            
        if (string.IsNullOrWhiteSpace(value))
            return Task.FromResult<IEnumerable<string>>(allTimeZones);
            
        var filtered = allTimeZones
            .Where(tz => 
                tz.Contains(value, StringComparison.OrdinalIgnoreCase) ||
                GetTimeZoneDisplayName(tz).Contains(value, StringComparison.OrdinalIgnoreCase))
            .ToList();
            
        return Task.FromResult<IEnumerable<string>>(filtered);
    }
    
    private string GetTimeZoneDisplayName(string timeZoneId)
    {
        try
        {
            var tz = TimeZoneInfo.FindSystemTimeZoneById(timeZoneId);
            return $"{tz.DisplayName} ({tz.Id})";
        }
        catch
        {
            return timeZoneId;
        }
    }

    void Cancel() => MudDialog.Cancel();

    async Task Submit()
    {
        string valueToSave = newValue;
        
        // If this is a time configuration, convert TimeSpan to HH:mm format
        if (IsTimeConfig() && timeValue.HasValue)
        {
            valueToSave = $"{timeValue.Value.Hours:D2}:{timeValue.Value.Minutes:D2}";
        }
        
        var result = await Mediator.Send(new UpdateConfiguracionCommand(Config.Clave, valueToSave));
        if (result)
        {
            Snackbar.Add("Configuración actualizada", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add("Error al actualizar", Severity.Error);
        }
    }
}
